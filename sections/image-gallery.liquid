<div class="gallery-section">
  <div class="page-width">
     <div class="image-gallery zoom-gallery">
         {% for block in section.blocks %}
           <div class=""> 
            <a href="{{ block.settings.image-gallery }}">
             <img src="{{ block.settings.image-gallery |  image_url: width:1024 }}" width="1024" height="1024" alt="{{ block.settings.image-gallery.alt }}" loading="lazy" />
            </a>
           </div>         
        {% endfor %}   
     </div>
  </div>
</div>

<script>
    $(document).ready(function() {
	$('.popup-gallery').magnificPopup({
		delegate: 'a',
		type: 'image',
		tLoading: 'Loading image #%curr%...',
		mainClass: 'mfp-img-mobile',
		gallery: {
			enabled: true,
			navigateByImgClick: true,
			preload: [0,1] // Will preload 0 - before current, and 1 after the current image
		},
		image: {
			tError: '<a href="%url%">The image #%curr%</a> could not be loaded.',
			titleSrc: function(item) {
				return item.el.attr('title') + '<small>by Marsel Van Oosten</small>';
			}
		}
	});
});
</script>

{% schema %}
{
  "name":"Image Gallery",
  "class":"image-pop-gallery",
  "blocks":[
    {
        "type":"image_picker",
        "name":"Image",
        "settings":[
            {
                "type":"image_picker",
                "id":"image-gallery",
                "label":"Image"
            }
        ]
    }
  ],
  "presets":[
    {
      "name":"Image Gallery"
    }
  ]
}
{% endschema %}    